<div class = "container-fluid city_form">
  <div class = "row">
    <div class = "col-md-3 offset-md-4">
      <div class = "text-center form-group">
      <%= form_tag(city_path, :method => 'get', id: "city-search-form") do %>
        <div class = "form-group">
          <%= text_field_tag :citysearch, params[:citysearch], placeholder: "Search Posts", class: 'form-control' %>
        </div>
          <%= submit_tag 'Submit', :name => nil %>
      <%  end %>
    </div>
    </div>
  </div>
</div>
<%= render 'newrallies/post' %>