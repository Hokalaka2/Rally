<div class = "container-fluid city_form">
  <div class = "row">
    <div class = "col-md-3 offset-md-4">
      <div class = "text-center form-group">
      <%= form_tag(newrallies_path, :method => 'get', id: "search-form") do %>
        <div class = "form-group">
          <%= text_field_tag :search, params[:search], placeholder: "Search Posts", class: 'form-control' %>
        </div>
          <%= submit_tag 'Submit', :name => nil %>
      <%  end %>
    </div>
    </div>
  </div>
</div>

<div class = "container">
    <% @newrally.each do |newrally| %>
      <div class = citypost>
        <h3 class = "text-center"><%= newrally.title %> 
        <%= newrally.created_at.strftime('%b %d, %Y') %>
        <%= newrally.city %></h3>
        <%= raw(newrally.description).truncate(358) %>
      </div>
    <% end %>
</div>